function give_rastyapa_quest()
	   task_manager.get_task_manager():give_task("stalker_trader_rastyapa")
end

function trader_rastyapa_check()
	if task_utils.cl_get_goodwill() > 20 then
		if db.mp_actor:object("wpn_ak74u") then
			return true
		elseif db.mp_actor:object("wpn_kiparis") then
			return true
		end
	end
    return false
end

function trader_rastyapa_transfer(first_speaker, second_speaker)
	if db.mp_actor:object("wpn_ak74u") then
		dialogs.relocate_item_section_from_actor(first_speaker, second_speaker, "wpn_ak74u")
		task_utils.send_drop_item(1, "wpn_ak74u")
    elseif db.mp_actor:object("wpn_kiparis") then
		dialogs.relocate_item_section_from_actor(first_speaker, second_speaker, "wpn_kiparis")
		task_utils.send_drop_item(1, "wpn_kiparis")
    end
	task_utils.send_reward(1, 25000, "")
end