function give_food_quest()
   task_manager.get_task_manager():give_task("stalker_trader_lootquest")
end

function has_food()
    if db.mp_actor:object("kolbasa") then
        return true
    end
    return false
end

function transfer_kolbasa(first_speaker, second_speaker)
    dialogs.relocate_item_section_from_actor(first_speaker, second_speaker, "kolbasa")
end

function complete_kolbasa()
	local task_id = stalker_trader_lootquest:get_id()
   task_manager.get_task_manager():task_complete("stalker_trader_lootquest")
end

